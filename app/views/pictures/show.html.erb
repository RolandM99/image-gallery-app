<div class="back-header">
  <div class="back">
      <a class="link" href="/pictures"><svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"/>
      </svg></a>
  </div>
  <h2 class="mt-3">My Picture</h2>
  <p class= "out"><%= link_to "Sign out", destroy_user_session_path, class: "sign-out", method: :delete, data: { confirm: 'Are you sure?' } %></p>
</div>
<div class="mx-auto md:w-2/3 w-full flex mt-4">
  <div class="img-all mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @picture %>

    <div class="inline-block ml-2 mt-1">
      <%= button_to 'Delete this picture', picture_path(@picture), method: :delete, class: "delete mt-2 rounded-lg py-3 px-5 font-medium" %>
    </div>
    <%= link_to 'Back to pictures', pictures_path, class: "back ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
